<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testePopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ExerciseActivity">

    <Button
        android:id="@+id/BackButton3"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ExerciseName"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="New Exercise Name"
        android:inputType="text"
        android:paddingLeft="30dp"
        android:paddingTop="2dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="353dp"
        android:layout_height="137dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseName">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="173dp"
            android:layout_height="123dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ExerciseImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ExerciseImage"
            android:layout_width="149dp"
            android:layout_height="121dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:onClick="SelectImage"
            android:paddingTop="10dp"
            android:contentDescription="ExerciseImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/ExerciseDescription"
        android:layout_width="375dp"
        android:layout_height="84dp"
        android:ems="10"
        android:hint="Description Here..."
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <TextView
        android:id="@+id/DescriptionTitleText"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:text="Description:"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ExerciseDescription"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />



    <!-- //////////////////////////////////////////////////// -->
    <!-- /////////////// VARIABLES CONTAINER //////////////// -->
    <!-- //////////////////////////////////////////////////// -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="392dp"
        android:layout_height="138dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseDescription">


        <!-- ///////////// SETS /////////////// -->

        <EditText
            android:id="@+id/ExerciseSets"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:autofillHints="4"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:hint="4"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- ///////////// REPS /////////////// -->

        <TextView
            android:id="@+id/SetsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:text="SETS"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ExerciseSets"
            app:layout_constraintEnd_toEndOf="@+id/ExerciseSets"
            app:layout_constraintStart_toStartOf="@+id/ExerciseSets" />

        <EditText
            android:id="@+id/ExerciseRest"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_marginStart="72dp"
            android:autofillHints="4"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:hint="60s"
            android:inputType="time"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/RestTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:text="REST"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ExerciseRest"
            app:layout_constraintEnd_toEndOf="@+id/ExerciseRest"
            app:layout_constraintStart_toStartOf="@+id/ExerciseRest" />


        <!-- ///////////// REPS /////////////// -->

        <EditText
            android:id="@+id/ExerciseReps"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="88dp"
            android:autofillHints="4"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:hint="8"
            android:inputType="time"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/RepsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:text="REPS"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ExerciseReps"
            app:layout_constraintEnd_toEndOf="@+id/ExerciseReps"
            app:layout_constraintStart_toStartOf="@+id/ExerciseReps" />

        <!-- ///////////// LOAD /////////////// -->


        <EditText
            android:id="@+id/ExerciseLoad"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_marginEnd="88dp"
            android:autofillHints="4"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:hint="1kg"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/LoadTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:text="LOAD"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ExerciseLoad"
            app:layout_constraintEnd_toEndOf="@+id/ExerciseLoad"
            app:layout_constraintStart_toStartOf="@+id/ExerciseLoad" />


        <!-- //////////////////////////////////////////////////// -->
        <!-- ///////////// PLUS / MINUS - BUTTONS /////////////// -->
        <!-- //////////////////////////////////////////////////// -->

        <ImageButton
            android:id="@+id/SetsMinusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="SetsMinus"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseSets"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/minus_icon" />

        <ImageButton
            android:id="@+id/SetsPlusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="SetsPlus"
            app:layout_constraintStart_toEndOf="@+id/ExerciseSets"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus_icon" />

        <ImageButton
            android:id="@+id/RestMinusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="RestMinus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseRest"
            app:srcCompat="@drawable/minus_icon" />

        <ImageButton
            android:id="@+id/RestPlusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="RestPlus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ExerciseRest"
            app:srcCompat="@drawable/plus_icon" />

        <ImageButton
            android:id="@+id/RepsPlusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="RepsPlus"
            app:layout_constraintStart_toEndOf="@+id/ExerciseReps"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus_icon" />

        <ImageButton
            android:id="@+id/RepsMinusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="RepsMinus"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseReps"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/minus_icon" />

        <ImageButton
            android:id="@+id/LoadPlusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="LoadPlus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ExerciseLoad"
            app:srcCompat="@drawable/plus_icon" />

        <ImageButton
            android:id="@+id/LoadMinusButton"
            android:layout_width="39dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="LoadMinus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseLoad"
            app:srcCompat="@drawable/minus_icon" />

        <!-- //////////////////////////////////////////////////// -->


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/TimerButton"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:text="Timer"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="367dp"
        android:layout_height="62dp"
        android:layout_margin="16dp"
        android:hint="Workout Type"
        app:layout_constraintBottom_toTopOf="@+id/TimerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.168">


        <AutoCompleteTextView
            android:id="@+id/AutoCompleteEnumList"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="128dp"
            android:inputType="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="361dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/SaveExercise"
            android:layout_width="177dp"
            android:layout_height="49dp"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DeleteExerciseButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/DeleteExerciseButton"
            android:layout_width="177dp"
            android:layout_height="49dp"
            android:layout_marginStart="3dp"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testePopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ExerciseActivity">

    <Button
        android:id="@+id/BackButton3"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ExerciseName"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="New Exercise Name"
        android:inputType="text"
        android:paddingLeft="30dp"
        android:paddingTop="2dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="353dp"
        android:layout_height="137dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseName">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="173dp"
            android:layout_height="123dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ExerciseImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ExerciseImage"
            android:layout_width="149dp"
            android:layout_height="121dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:onClick="SelectImage"
            android:paddingTop="10dp"
            android:contentDescription="ExerciseImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/ExerciseDescription"
        android:layout_width="375dp"
        android:layout_height="84dp"
        android:ems="10"
        android:hint="Description Here..."
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <TextView
        android:id="@+id/DescriptionTitleText"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:text="Description:"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ExerciseDescription"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="403dp"
        android:layout_height="143dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseDescription">


        <EditText
            android:id="@+id/ExerciseRest"
            android:layout_width="72dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:ems="10"
            android:hint="Ex: 1min"
            android:inputType="time"
            android:autofillHints="4"
            android:textSize="20sp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ExerciseSets"
            app:layout_constraintVertical_bias="0.038" />

        <EditText
            android:id="@+id/ExerciseSets"
            android:layout_width="35dp"
            android:layout_height="59dp"
            android:layout_marginStart="56dp"
            android:ems="10"
            android:hint="Ex: 4"
            android:autofillHints="4"
            android:textSize="20sp"
            android:inputType="number"
            android:textAlignment="center"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/SetsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sets"
            app:layout_constraintStart_toStartOf="@+id/ExerciseSets"
            app:layout_constraintTop_toTopOf="@+id/ExerciseSets" />

        <TextView
            android:id="@+id/RestTitleText"
            android:layout_width="67dp"
            android:layout_height="18dp"
            android:text="Rest"
            app:layout_constraintStart_toStartOf="@+id/ExerciseRest"
            app:layout_constraintTop_toTopOf="@+id/ExerciseRest" />

        <EditText
            android:id="@+id/ExerciseLoad"
            android:layout_width="67dp"
            android:layout_height="54dp"
            android:layout_marginEnd="76dp"
            android:ems="10"
            android:hint="Ex: 1kg"
            android:inputType="number"
            android:autofillHints="4"
            android:textSize="20sp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ExerciseReps" />

        <TextView
            android:id="@+id/LoadTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load"
            app:layout_constraintStart_toStartOf="@+id/ExerciseLoad"
            app:layout_constraintTop_toTopOf="@+id/ExerciseLoad" />

        <EditText
            android:id="@+id/ExerciseReps"
            android:layout_width="68dp"
            android:layout_height="54dp"
            android:ems="10"
            android:hint="Ex: 8"
            android:inputType="time"
            android:autofillHints="4"
            android:textSize="20sp"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toEndOf="@+id/ExerciseSets"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/RepsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps"
            app:layout_constraintStart_toStartOf="@+id/ExerciseReps"
            app:layout_constraintTop_toTopOf="@+id/ExerciseReps" />

        <ImageButton
            android:id="@+id/SetsMinusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:contentDescription="@string/app_name"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/minus_icon"
            android:onClick="SetsMinus"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseSets"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/SetsPlusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="SetsPlus"
            app:layout_constraintStart_toEndOf="@+id/ExerciseSets"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus_icon" />

        <ImageButton
            android:id="@+id/RestMinusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:contentDescription="@string/app_name"
            android:onClick="RestMinus"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/minus_icon"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseRest"
            app:layout_constraintTop_toBottomOf="@+id/SetsMinusButton" />

        <ImageButton
            android:id="@+id/RestPlusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:contentDescription="@string/app_name"
            android:onClick="RestPlus"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/plus_icon"
            app:layout_constraintStart_toEndOf="@+id/ExerciseRest"
            app:layout_constraintTop_toBottomOf="@+id/SetsPlusButton" />

        <ImageButton
            android:id="@+id/RepsPlusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:contentDescription="@string/app_name"
            android:onClick="RepsPlus"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/plus_icon"
            app:layout_constraintStart_toEndOf="@+id/ExerciseReps"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/RepsMinusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:contentDescription="@string/app_name"
            android:onClick="RepsMinus"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/minus_icon"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseReps"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/LoadPlusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:contentDescription="@string/app_name"
            android:onClick="LoadPlus"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/plus_icon"
            app:layout_constraintStart_toEndOf="@+id/ExerciseLoad"
            app:layout_constraintTop_toBottomOf="@+id/RepsPlusButton" />

        <ImageButton
            android:id="@+id/LoadMinusButton"
            android:layout_width="39dp"
            android:layout_height="54dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="LoadMinus"
            app:layout_constraintEnd_toStartOf="@+id/ExerciseLoad"
            app:layout_constraintTop_toBottomOf="@+id/RepsMinusButton"
            app:srcCompat="@drawable/minus_icon" />


        <Button
            android:id="@+id/ChangeKgToLb"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:text="Kg-Lb"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/TimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Timer"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="367dp"
        android:layout_height="62dp"
        android:layout_margin="16dp"
        android:hint="Workout Type"
        app:layout_constraintBottom_toTopOf="@+id/TimerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.0">


        <AutoCompleteTextView
            android:id="@+id/AutoCompleteEnumList"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="128dp"
            android:inputType="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="361dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/SaveExercise"
            android:layout_width="177dp"
            android:layout_height="49dp"
            android:layout_marginStart="3dp"
            android:text="Save New Exercise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toEndOf="@+id/DeleteExerciseButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/DeleteExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Delete Exercise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.542" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


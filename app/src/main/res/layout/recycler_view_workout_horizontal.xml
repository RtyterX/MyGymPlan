<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="86dp"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <Button
        android:id="@+id/BackgroundRVWorkout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RecyclerWorkoutHorizontalName"
        android:layout_width="58dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Workout"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVWorkout"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundRVWorkout"
        app:layout_constraintStart_toStartOf="@+id/BackgroundRVWorkout"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVWorkout" />

</androidx.constraintlayout.widget.ConstraintLayout>
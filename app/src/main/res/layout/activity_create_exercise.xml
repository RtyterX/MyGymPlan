<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateExerciseActivity">

    <EditText
        android:id="@+id/NewExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="New Exercise Name"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="58dp" />

    <ImageView
        android:id="@+id/NewExerciseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="123dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/NewExerciseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="New Exercise Description"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest Time"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="345dp" />

    <EditText
        android:id="@+id/NewExerciseRest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="364dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="417dp" />

    <EditText
        android:id="@+id/NewExerciseLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="442dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="489dp" />

    <EditText
        android:id="@+id/NewExerciseSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reps"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="562dp" />

    <EditText
        android:id="@+id/NewExerciseReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="590dp" />

    <Button
        android:id="@+id/SaveNewExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save New Exercise"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="667dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
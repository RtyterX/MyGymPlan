<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <View
        android:id="@+id/BackgroundRVExercise"
        android:layout_width="407dp"
        android:layout_height="111dp"
        android:background="#1EC1BFF8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RecyclerExerciseSets"
        android:layout_width="33dp"
        android:layout_height="23dp"
        android:layout_marginTop="23dp"
        android:text="Sets"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/RepsIconImage"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise" />

    <TextView
        android:id="@+id/RecyclerExerciseReps"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="1dp"
        android:text="Reps"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/DeleteWorkoutIcon"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise" />

    <TextView
        android:id="@+id/RecyclerExerciseRest"
        android:layout_width="35dp"
        android:layout_height="23dp"
        android:layout_marginBottom="28dp"
        android:text="Rest"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintEnd_toStartOf="@+id/LoadIconImage" />

    <TextView
        android:id="@+id/RecyclerExerciseLoad"
        android:layout_width="29dp"
        android:layout_height="23dp"
        android:layout_marginBottom="28dp"
        android:text="Load"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintEnd_toStartOf="@+id/DeleteWorkoutIcon" />

    <ImageButton
        android:id="@+id/ChangeOrderExercise"
        android:layout_width="42dp"
        android:layout_height="95dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/BackgroundRVExercise"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spheres_icon" />

    <TextView
            android:id="@+id/RecyclerExerciseName"
            android:layout_width="119dp"
            android:layout_height="21dp"
            android:layout_marginTop="28dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Exercise Name"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
            app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise" />

        <TextView
            android:id="@+id/RecyclerExerciseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Type"
            app:layout_constraintStart_toEndOf="@+id/RVWTypeTitle"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerExerciseName" />

        <ImageView
            android:id="@+id/ImageRecyclerExercise"
            android:layout_width="72dp"
            android:layout_height="73dp"
            android:layout_marginStart="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ChangeOrderExercise"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/RVWTypeTitle"
            android:layout_width="36dp"
            android:layout_height="19dp"
            android:text="Type: "
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerExerciseName" />

        <ImageView
            android:id="@+id/SetsIconImage"
            android:layout_width="16dp"
            android:layout_height="21dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/RecyclerExerciseSets"
            app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
            app:srcCompat="@drawable/sets_icon" />

        <ImageView
            android:id="@+id/RepsIconImage"
            android:layout_width="21dp"
            android:layout_height="16dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/RecyclerExerciseReps"
            app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
            app:srcCompat="@drawable/reps_icon" />

        <ImageView
            android:id="@+id/RestIconImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
            app:layout_constraintEnd_toStartOf="@+id/RecyclerExerciseRest"
            app:srcCompat="@drawable/rest_icon" />

        <ImageView
            android:id="@+id/LoadIconImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
            app:layout_constraintEnd_toStartOf="@+id/RecyclerExerciseLoad"
            app:srcCompat="@drawable/load_icon" />

        <TextView
            android:id="@+id/LastModifiedExercise"
            android:layout_width="42dp"
            android:layout_height="14dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVExercise" />

        <TextView
            android:id="@+id/LastModifiedTitle"
            android:layout_width="44dp"
            android:layout_height="14dp"
            android:layout_marginBottom="4dp"
            android:text="LastMod:"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
            app:layout_constraintEnd_toStartOf="@+id/LastModifiedExercise" />


    <ImageButton
        android:id="@+id/DeleteWorkoutIcon"
        android:layout_width="38dp"
        android:layout_height="70dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundRVExercise"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
        app:layout_constraintVertical_bias="0.463"
        app:srcCompat="@drawable/delete_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <View
        android:id="@+id/BackgroundRVExercise"
        android:layout_width="407dp"
        android:layout_height="111dp"
        android:background="@color/grayBG"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RecyclerExerciseSets"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:text="Sets"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/SetsIconImage"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise" />

    <TextView
        android:id="@+id/RecyclerExerciseReps"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:text="Reps"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/RepsIconImage"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise" />

    <TextView
        android:id="@+id/RecyclerExerciseRest"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="28dp"
        android:text="Rest"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintStart_toEndOf="@+id/RestIconImage" />

    <TextView
        android:id="@+id/RecyclerExerciseLoad"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="28dp"
        android:text="Load"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintStart_toEndOf="@+id/LoadIconImage" />

    <ImageView
        android:id="@+id/SwapPositionsExerciseRV"
        android:layout_width="39dp"
        android:layout_height="68dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441"
        app:srcCompat="@drawable/spheres_icon" />

    <TextView
        android:id="@+id/RecyclerExerciseName"
        android:layout_width="119dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Exercise Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise" />

    <TextView
            android:id="@+id/RecyclerExerciseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Type"
            app:layout_constraintStart_toEndOf="@+id/RVWTypeTitle"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerExerciseName" />

    <ImageView
        android:id="@+id/ImageRecyclerExercise"
        android:layout_width="72dp"
        android:layout_height="73dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintStart_toStartOf="@+id/BackgroundRVExercise"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RVWTypeTitle"
        android:layout_width="36dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:text="Type: "
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
        app:layout_constraintTop_toBottomOf="@+id/RecyclerExerciseName" />

    <ImageView
        android:id="@+id/SetsIconImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/RecyclerExerciseName"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
        app:srcCompat="@drawable/sets_icon" />

    <ImageView
        android:id="@+id/RepsIconImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/RecyclerExerciseSets"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
        app:srcCompat="@drawable/reps_icon" />

    <ImageView
        android:id="@+id/RestIconImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintStart_toEndOf="@+id/RecyclerExerciseName"
        app:srcCompat="@drawable/rest_icon" />

    <ImageView
        android:id="@+id/LoadIconImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintStart_toEndOf="@+id/RecyclerExerciseRest"
        app:srcCompat="@drawable/load_icon" />

        <TextView
            android:id="@+id/LastModifiedExercise"
            android:layout_width="42dp"
            android:layout_height="14dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVExercise" />

        <TextView
            android:id="@+id/LastModifiedTitle"
            android:layout_width="44dp"
            android:layout_height="14dp"
            android:layout_marginBottom="4dp"
            android:text="LastMod:"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
            app:layout_constraintEnd_toStartOf="@+id/LastModifiedExercise" />


    <ImageView
        android:id="@+id/DeleteWorkoutIcon"
        android:layout_width="31dp"
        android:layout_height="44dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintEnd_toStartOf="@+id/SwapPositionsExerciseRV"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
        app:layout_constraintVertical_bias="0.492"
        app:srcCompat="@drawable/delete_icon" />

    <ImageView
        android:id="@+id/VideoExerciseImageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
        app:layout_constraintTop_toBottomOf="@+id/RVWTypeTitle"
        app:srcCompat="@drawable/bug" />


</androidx.constraintlayout.widget.ConstraintLayout>

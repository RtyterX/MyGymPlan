<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <View
        android:id="@+id/BackgroundRVExercise"
        android:layout_width="407dp"
        android:layout_height="80dp"
        android:background="@color/grayBG"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RecyclerExerciseName"
        android:layout_width="119dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Exercise Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise" />

    <TextView
        android:id="@+id/RecyclerExerciseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Exercise Type"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
        app:layout_constraintTop_toBottomOf="@+id/RecyclerExerciseName" />

    <ImageView
        android:id="@+id/ImageRecyclerExercise"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintStart_toStartOf="@+id/BackgroundRVExercise"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/LastModifiedExercise"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundRVExercise" />

    <TextView
        android:id="@+id/LastModifiedTitle"
        android:layout_width="35dp"
        android:layout_height="10dp"
        android:text="LastMod:"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintEnd_toStartOf="@+id/LastModifiedExercise" />


    <ImageView
        android:id="@+id/VideoExerciseImageIndicator"
        android:layout_width="25dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/ImageRecyclerExercise"
        app:layout_constraintTop_toBottomOf="@+id/RecyclerExerciseType"
        app:srcCompat="@drawable/bug" />

    <ImageView
        android:id="@+id/SwapPositionsExerciseRV"
        android:layout_width="26dp"
        android:layout_height="69dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452"
        app:srcCompat="@drawable/spheres_icon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="94dp"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVExercise"
        app:layout_constraintEnd_toStartOf="@+id/SwapPositionsExerciseRV"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVExercise"
        app:layout_constraintVertical_bias="0.515">

        <ImageView
            android:id="@+id/SetsIconImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sets_icon" />

        <TextView
            android:id="@+id/RecyclerExerciseSets"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:text="Sets"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/SetsIconImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/RepsIconImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toStartOf="@+id/RecyclerExerciseReps"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/reps_icon" />

        <TextView
            android:id="@+id/RecyclerExerciseReps"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:text="Reps"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/RestIconImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/rest_icon" />

        <TextView
            android:id="@+id/RecyclerExerciseRest"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:text="Rest"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/RestIconImage" />

        <ImageView
            android:id="@+id/LoadIconImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/RecyclerExerciseLoad"
            app:srcCompat="@drawable/load_icon" />

        <TextView
            android:id="@+id/RecyclerExerciseLoad"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:text="Load"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

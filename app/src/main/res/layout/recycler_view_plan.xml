<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/RecycleExerciceImage"
        android:layout_width="296dp"
        android:layout_height="198dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/BackgroundRVPlan"
            android:layout_width="284dp"
            android:layout_height="176dp"
            android:background="@drawable/plan_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/RecyclerPlanName"
            android:layout_width="146dp"
            android:layout_height="19dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVPlan"
            app:layout_constraintStart_toStartOf="@+id/BackgroundRVPlan"
            app:layout_constraintTop_toTopOf="@+id/BackgroundRVPlan" />

        <ImageView
            android:id="@+id/RecyclePlanImage"
            android:layout_width="106dp"
            android:layout_height="98dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/BackgroundRVPlan"
            app:layout_constraintTop_toTopOf="@+id/BackgroundRVPlan"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/RVAuthorTitle"
            android:layout_width="55dp"
            android:layout_height="17dp"
            android:layout_marginTop="28dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Author:"
            android:textAlignment="center"
            android:textColor="#F2F2F2"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVPlan"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/BackgroundRVPlan"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerPlanName" />

        <TextView
            android:id="@+id/CreatedDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Create Date: "
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/CreatedDatePlan"
            app:layout_constraintTop_toBottomOf="@+id/BackgroundRVPlan" />

        <TextView
            android:id="@+id/CreatedDatePlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="TextView"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BackgroundRVPlan" />

        <ImageView
            android:id="@+id/EditPlanRV"
            android:layout_width="37dp"
            android:layout_height="33dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVPlan"
            app:layout_constraintTop_toTopOf="@+id/BackgroundRVPlan"
            app:srcCompat="@drawable/edit_icon2" />

        <TextView
            android:id="@+id/BodyTypePlanRv"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/BodyTypeTitleRV"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerPlanName" />

        <TextView
            android:id="@+id/BodyTypeTitleRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Body Type:"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/RecyclerPlanName"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="@+id/RecyclerPlanName"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerPlanName" />

        <TextView
            android:id="@+id/PlanRVAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/RVAuthorTitle"
            app:layout_constraintStart_toStartOf="@+id/RVAuthorTitle"
            app:layout_constraintTop_toBottomOf="@+id/RVAuthorTitle" />

        <TextView
            android:id="@+id/FixedDaysText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#37993C"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVPlan"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVPlan"
            app:layout_constraintStart_toStartOf="@+id/BackgroundRVPlan" />

        <ImageView
            android:id="@+id/DeletePlanButton"
            android:layout_width="31dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVPlan"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVPlan"
            app:srcCompat="@drawable/delete_icon" />

        <TextView
            android:id="@+id/PlanExperienceLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/BackgroundRVPlan"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/SetPlanActiveRV"
            android:layout_width="74dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#204795"
            android:text="Active"
            android:textAlignment="gravity"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/BackgroundRVPlan"
            app:layout_constraintTop_toTopOf="@+id/BackgroundRVPlan" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
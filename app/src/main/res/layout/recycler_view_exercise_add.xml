<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/BackgroundRVAddExercise"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:background="#F5EEFC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AddExerciseRVName"
        android:layout_width="119dp"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Exercise Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/AddExerciseImageRV"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVAddExercise" />

    <TextView
        android:id="@+id/AddExerciseRVType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Type"
        app:layout_constraintStart_toEndOf="@+id/RVWTypeTitle"
        app:layout_constraintTop_toBottomOf="@+id/AddExerciseRVName" />

    <ImageView
        android:id="@+id/AddExerciseImageRV"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVAddExercise"
        app:layout_constraintStart_toStartOf="@+id/BackgroundRVAddExercise"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVAddExercise"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RVWTypeTitle"
        android:layout_width="36dp"
        android:layout_height="19dp"
        android:layout_marginStart="12dp"
        android:text="Type: "
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/AddExerciseImageRV"
        app:layout_constraintTop_toBottomOf="@+id/AddExerciseRVName" />

    <TextView
        android:id="@+id/AddExerciseRVDelete"
        android:layout_width="46dp"
        android:layout_height="14dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/DeletedDateTitle"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundRVAddExercise" />

    <TextView
        android:id="@+id/DeletedDateTitle"
        android:layout_width="71dp"
        android:layout_height="15dp"
        android:text="Modified Date:"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVAddExercise"
        app:layout_constraintEnd_toStartOf="@+id/AddExerciseRVDelete" />

    <ImageView
        android:id="@+id/ShareExerciseIcon"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/DeleteSavedExerciseIcon"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVAddExercise"
        app:srcCompat="@drawable/nav_share" />

    <ImageView
        android:id="@+id/EditSavedExerciseIcon"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ShareExerciseIcon"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVAddExercise"
        app:srcCompat="@drawable/edit_icon2" />

    <ImageView
        android:id="@+id/DeleteSavedExerciseIcon"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVAddExercise"
        app:srcCompat="@drawable/delete_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>
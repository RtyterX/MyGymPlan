<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="100dp">

    <View
        android:id="@+id/BackgroundRVAddExercise"
        android:layout_width="263dp"
        android:layout_height="86dp"
        android:layout_marginTop="4dp"
        android:background="#F5EEFC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AddExerciseRVName"
        android:layout_width="119dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Exercise Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/AddExerciseImageRV"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVAddExercise" />

    <TextView
        android:id="@+id/AddExerciseRVType"
        app:layout_constraintStart_toEndOf="@+id/RVWTypeTitle"
        app:layout_constraintTop_toBottomOf="@+id/AddExerciseRVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Type"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="33dp" />

    <ImageView
        android:id="@+id/AddExerciseImageRV"
        android:layout_width="72dp"
        android:layout_height="73dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVAddExercise"
        app:layout_constraintStart_toStartOf="@+id/BackgroundRVAddExercise"
        app:layout_constraintTop_toTopOf="@+id/BackgroundRVAddExercise"
        app:layout_constraintVertical_bias="0.562"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RVWTypeTitle"
        android:layout_width="36dp"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:text="Type: "
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/AddExerciseImageRV"
        app:layout_constraintTop_toBottomOf="@+id/AddExerciseRVName" />

    <TextView
        android:id="@+id/AddExerciseRVDelete"
        android:layout_width="42dp"
        android:layout_height="14dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/DeletedDateTitle"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundRVAddExercise" />

    <TextView
        android:id="@+id/DeletedDateTitle"
        android:layout_width="61dp"
        android:layout_height="14dp"
        android:text="Delete Date:"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundRVAddExercise"
        app:layout_constraintEnd_toStartOf="@+id/AddExerciseRVDelete" />


</androidx.constraintlayout.widget.ConstraintLayout>
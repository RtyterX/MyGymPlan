<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NewWorkoutPopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="358dp"
        android:layout_height="483dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/NewWorkoutNameText"
            android:layout_width="342dp"
            android:layout_height="446dp"
            android:background="#F1F1FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.243" />

        <EditText
            android:id="@+id/NewWorkoutName"
            android:layout_width="318dp"
            android:layout_height="31dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/welcome_input"
            android:ems="10"
            android:hint="Workout Name "
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PopupTitle2" />

        <TextView
            android:id="@+id/NewWorkoutNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/NewWorkoutName"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/NewWorkoutDescription"
            android:layout_width="315dp"
            android:layout_height="82dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/welcome_input"
            android:ems="10"
            android:gravity="start"
            android:hint="Describe your Workout..."
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.651"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NewWorkoutName" />

        <TextView
            android:id="@+id/NewWorkoutDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Description"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/NewWorkoutDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/WorkoutTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:text="Type"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NewWorkoutDescription" />

        <Button
            android:id="@+id/ConfirmWarningButton"
            android:layout_width="139dp"
            android:layout_height="41dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="28dp"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/CloseWarningButton"
            android:layout_width="134dp"
            android:layout_height="41dp"
            android:layout_marginBottom="28dp"
            android:text="Close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ConfirmWarningButton"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/PopupTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="New Workout"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/NewWorkoutNameText"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="318dp"
            android:layout_height="65dp"
            android:hint="Workout Type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="@+id/NewWorkoutNameText"
            app:layout_constraintTop_toBottomOf="@+id/WorkoutTypeTitle">


            <AutoCompleteTextView
                android:id="@+id/AutoCompleteNewWorkouts"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
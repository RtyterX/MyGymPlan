<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/EmptySavedWorkoutsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Workouts Here"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/SavedWorkoutsRV"
        app:layout_constraintEnd_toEndOf="@+id/SavedWorkoutsRV"
        app:layout_constraintStart_toStartOf="@+id/SavedWorkoutsRV"
        app:layout_constraintTop_toTopOf="@+id/SavedWorkoutsRV" />

    <ImageView
        android:id="@+id/BackgroundSavedWorkouts"
        android:layout_width="303dp"
        android:layout_height="508dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:color/transparent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SavedWorkoutsRV"
        android:layout_width="241dp"
        android:layout_height="337dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundSavedWorkouts"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/BackgroundSavedWorkouts"
        app:layout_constraintTop_toBottomOf="@+id/SavedWorkoutsTitle">

        <TextView
            android:id="@+id/emptyPlanRVText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Plans Here"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/CreateNewPlanButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar2" />

        <TextView
            android:id="@+id/emptyPlanRVText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Plans Here"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/CreateNewPlanButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar2" />

        <TextView
            android:id="@+id/emptyPlanRVText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Plans Here"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/CreateNewPlanButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar2" />

        <TextView
            android:id="@+id/emptyPlanRVText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Plans Here"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/CreateNewPlanButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar2" />
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/CloseSavedWorkout"
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:text="Close"
        android:textColor="@color/blue1"
        app:layout_constraintBottom_toBottomOf="@+id/BackgroundSavedWorkouts"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundSavedWorkouts"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/BackgroundSavedWorkouts" />

    <TextView
        android:id="@+id/SavedWorkoutsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Saved Workouts"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundSavedWorkouts"
        app:layout_constraintStart_toStartOf="@+id/BackgroundSavedWorkouts"
        app:layout_constraintTop_toTopOf="@+id/BackgroundSavedWorkouts" />

    <TextView
        android:id="@+id/SavedWorkoutsListTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="List Size Number"
        app:layout_constraintBottom_toTopOf="@+id/SavedWorkoutsRV"
        app:layout_constraintStart_toStartOf="@+id/BackgroundSavedWorkouts" />

    <ImageView
        android:id="@+id/SortSavedWorkouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toTopOf="@+id/SavedWorkoutsRV"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundSavedWorkouts"
        app:srcCompat="@drawable/bug" />


</androidx.constraintlayout.widget.ConstraintLayout>
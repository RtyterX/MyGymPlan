<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MyWorkoutPlanText"
        android:layout_width="125dp"
        android:layout_height="31dp"
        android:text="My Workout Plan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecycleViewWorkouts"
        android:layout_width="409dp"
        android:layout_height="580dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="85dp" >

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/EditActualPlan"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:text="Edit Plan"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="666dp" />

    <Button
        android:id="@+id/CreateNewPlanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Plan"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="667dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
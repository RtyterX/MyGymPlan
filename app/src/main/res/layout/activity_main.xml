<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activitys.MainActivity">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainRVWorkouts"
            android:layout_width="349dp"
            android:layout_height="89dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainTitle">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="412dp"
            android:layout_height="60dp"
            android:minHeight="?attr/actionBarSize"
            android:textColor="@color/white"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="48sp"
                android:src="@drawable/mygymplan_logo" />

        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/MainInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/ImportMainIcon"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:srcCompat="@drawable/nav_info" />

        <TextView
            android:id="@+id/MainTitle"
            android:layout_width="309dp"
            android:layout_height="59dp"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <TextView
            android:id="@+id/TodayWorkoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seu treino de hoje:"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/MainRVWorkouts"
            app:layout_constraintStart_toStartOf="@+id/MainRVWorkouts" />

        <TextView
            android:id="@+id/MainRVPlansTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plano Ativo"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/MainRVPlans"
            app:layout_constraintStart_toStartOf="@+id/MainRVPlans" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainRVPlans"
            android:layout_width="337dp"
            android:layout_height="149dp"
            android:layout_marginTop="72dp"
            app:layout_constraintBottom_toTopOf="@+id/MainFilterView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainRVWorkouts"
            app:layout_constraintVertical_bias="0.297" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/MainFilterView"
            android:layout_width="246dp"
            android:layout_height="138dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@drawable/createuserbg" />

        <ImageView
            android:id="@+id/ImportMainIcon"
            android:layout_width="46dp"
            android:layout_height="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:srcCompat="@drawable/load_icon" />

        <TextView
            android:id="@+id/ImportMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImportMainIcon" />

        <Button
            android:id="@+id/MainCreatePlanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Plan"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/MainRVPlans"
            app:layout_constraintEnd_toEndOf="@+id/MainRVPlans"
            app:layout_constraintStart_toStartOf="@+id/MainRVPlans"
            app:layout_constraintTop_toTopOf="@+id/MainRVPlans" />

        <TextView
            android:id="@+id/MainNoWorkoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Workouts"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/MainRVPlans"
            app:layout_constraintEnd_toEndOf="@+id/MainRVWorkouts"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="@+id/MainRVWorkouts"
            app:layout_constraintTop_toTopOf="@+id/MainRVWorkouts"
            app:layout_constraintVertical_bias="0.363" />

        <TextView
            android:id="@+id/DayOfWeekText"
            android:layout_width="118dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:textColor="@color/white"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/blue2"
        app:itemTextColor="@color/blue1"
        tools:visibility="gone" />

</androidx.drawerlayout.widget.DrawerLayout>
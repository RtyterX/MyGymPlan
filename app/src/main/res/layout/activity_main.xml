<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activitys.MainActivity">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainRVWorkouts"
            android:layout_width="372dp"
            android:layout_height="120dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainTitle">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="412dp"
            android:layout_height="60dp"
            android:minHeight="?attr/actionBarSize"
            android:textColor="@color/white"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="48sp"
                android:src="@drawable/mygymplan_logo" />

        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/MainInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/ImportMainIcon"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:srcCompat="@drawable/nav_info" />

        <TextView
            android:id="@+id/MainTitle"
            android:layout_width="320dp"
            android:layout_height="39dp"
            android:layout_marginTop="30dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blue1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <TextView
            android:id="@+id/TodayWorkoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:text="Seu treino de hoje:"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue2"
            app:layout_constraintBottom_toTopOf="@+id/MainRVWorkouts"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/MainRVPlansTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plano Ativo"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue2"
            app:layout_constraintBottom_toTopOf="@+id/MainRVPlans"
            app:layout_constraintStart_toStartOf="@+id/TodayWorkoutTitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainRVPlans"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainRVWorkouts" />

        <ViewFlipper
            android:id="@+id/MainFlipperView"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:autoStart="true"
            android:flipInterval="3000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OtherPlansButton">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/createuserbg" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mygymplan_logo_fundoazul" />

        </ViewFlipper>


        <ImageView
            android:id="@+id/ImportMainIcon"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:srcCompat="@drawable/load_icon" />

        <TextView
            android:id="@+id/ImportMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Import"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImportMainIcon" />

        <Button
            android:id="@+id/MainCreatePlanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Plan"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/MainRVPlans"
            app:layout_constraintEnd_toEndOf="@+id/MainRVPlans"
            app:layout_constraintStart_toStartOf="@+id/MainRVPlans"
            app:layout_constraintTop_toTopOf="@+id/MainRVPlans" />

        <TextView
            android:id="@+id/MainNoWorkoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Workouts"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/MainRVPlans"
            app:layout_constraintEnd_toEndOf="@+id/MainRVWorkouts"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="@+id/MainRVWorkouts"
            app:layout_constraintTop_toTopOf="@+id/MainRVWorkouts"
            app:layout_constraintVertical_bias="0.363" />

        <TextView
            android:id="@+id/DayOfWeekText"
            android:layout_width="118dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blue2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <Button
            android:id="@+id/OtherPlansButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Plan List"
            app:layout_constraintEnd_toEndOf="@+id/MainRVPlans"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="@+id/MainRVPlans"
            app:layout_constraintTop_toBottomOf="@+id/MainRVPlans" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:textColor="@color/white"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/blue2"
        app:itemTextColor="@color/blue1"
        tools:visibility="gone" />

</androidx.drawerlayout.widget.DrawerLayout>